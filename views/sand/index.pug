extends ../layout

block script
  script(type="text/javascript").
    let test = () => {
        alert("Test");
    }

block content
  h1 実験場
  hr
  p
    table(id="demo")
      - for( let i = 0; i < row; i++ )
          tr
          - for( let j = 0; j < col; j++)
              td(class=i+':'+j)
                input(type="text" size="5")
    br
    button(onclick="test()") 保存
  p
    form(action="#" method="get")
      label 行：
      input(type="text" name="row")
      | 
      label 列：
      input(type="text" name="col")
      | 
      input(type="submit" value="生成")
  hr
  p
    a(href="/", title="ホームページ") 前のページに戻る
